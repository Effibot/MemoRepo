<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".IconFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/cardStyle"
        android:elevation="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="4dp">
        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TableRow>

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/favouriteButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="15dp"
                    android:src="@drawable/ic_favourite"
                    />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/workButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="15dp"
                    android:src="@drawable/ic_work" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/foodButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="15dp"
                    android:src="@drawable/ic_restaurant" />

                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/schoolButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:padding="15dp"
                    android:src="@drawable/ic_school" />
            </TableRow>
        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/travelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="15dp"
                android:src="@drawable/ic_travel" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/shoppingButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="15dp"
                android:src="@drawable/ic_shopping" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/videogamesButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="15dp"
                android:src="@drawable/ic_videogames" />

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/smileButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:padding="15dp"
                android:src="@drawable/ic_icon_light" />
        </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>